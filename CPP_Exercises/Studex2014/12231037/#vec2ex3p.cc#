#include <stdio.h>
#include "vector3p.h"

//
// main() - ’¥Æ’¥¹’¥È’¥×’¥í’¥°’¥é’¥à
//
int main(void)
{
  Vector2 a, b, c;
//a, b ’¤ò’½Ð’ÎÏ
	printf("’¥Ù’¥¯’¥È’¥ë’¤Î’½é’´ü’ÃÍ");
	a.print();
	b.print();
	printf("\n");

// a, b ’¤ò’Æþ’ÎÏ
	printf("a = ? ");
	a.scan();
	printf("b = ? ");
	b.scan();
// a + b ’¤ò’½Ð’ÎÏ
	printf("a + b = ");
	(a.add(b)).print();
	printf("\n");
// a + (2, 1) ’¤ò’½Ð’ÎÏ
	printf("a + (2,1) = ");
	(a.add(Vector2(2, 1))).print();
	printf("\n");
// a - b ’¤ò’½Ð’ÎÏ
	printf("a - b = ");
	(a.sub(b)).print();
	printf("\n");

	return 0;
}
